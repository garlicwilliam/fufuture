# http://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.js]
max_line_length=150

[*.less]
max_line_length=200

[*.scss]
max_line_length=200

[*.css]
max_line_length=200

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
